<Window x:Class="ST10440733_PROG6221_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10440733_PROG6221_POE"
        mc:Ignorable="d"
        Title="Cyber Security Awareness Bot" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Welcome to the Cybersecurity Awareness Bot!" HorizontalAlignment="Left" Margin="208,10,0,0" VerticalAlignment="Top" Width="334" RenderTransformOrigin="0.497,0.371" FontSize="24" FontFamily="Tahoma"/>
        <Label Content="Enter your name:" HorizontalAlignment="Left" Margin="123,335,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="443,342,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"  Name ="txtName"/>
        <Label Content="Choose your favourite topic:" HorizontalAlignment="Left" Margin="123,394,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox HorizontalAlignment="Left" Margin="443,400,0,0" VerticalAlignment="Top" Width="150" Name ="cmbFavouriteTopic">
            <ComboBoxItem Content="Password"/>
            <ComboBoxItem Content="Phishing"/>
            <ComboBoxItem Content="Browsing"/>
            <ComboBoxItem Content="Device Safety"/>
            <ComboBoxItem Content="Social Engineering"/>
            <ComboBoxItem Content="WiFi"/>
        </ComboBox>
        <Button Content="Start Chat" HorizontalAlignment="Left" Margin="300,457,0,0" VerticalAlignment="Top" Width="150" Click="StartChat_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="123,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="222" Width="632" FontFamily="Consolas" FontSize="12" Name ="txtAsciiArt"/>

    </Grid>
</Window>
